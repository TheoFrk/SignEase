# Server-Konfiguration
PORT=4000
NODE_ENV=development

# JWT-Konfiguration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=1d

# Datenbank-Konfiguration
MONGODB_URI=mongodb://localhost:27017/signease
DB_NAME=signease

# E-Mail-Konfiguration (für Benachrichtigungen)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=notifications@example.com
MAIL_PASS=your_mail_password
MAIL_FROM=SignEase <notifications@example.com>

# Speicher-Konfiguration
UPLOAD_DIR=uploads
DOCUMENT_STORAGE=local # oder 's3' für AWS S3

# Sicherheits-Konfiguration
RATE_LIMIT_WINDOW_MS=900000 # 15 Minuten
RATE_LIMIT_MAX=100 # maximal 100 Anfragen pro IP in 15 Minuten
